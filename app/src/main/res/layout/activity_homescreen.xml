<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bley0001.student.monash.edu.drinkinggame.HomeScreen">

    <Button
        android:id="@+id/btnAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Player"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/edtextAddPlayer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp" />


    <EditText
        android:id="@+id/edtextAddPlayer"
        android:layout_width="247dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="New Player Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnAddPlayer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp" />


    <EditText
        android:id="@+id/edtextPlayers"
        android:layout_width="291dp"
        android:layout_height="305dp"
        android:ems="10"
        android:gravity="top"
        android:hint="There are curently no players drinking."
        android:inputType="textMultiLine"
        android:lineSpacingExtra="8sp"
        android:maxLines="50"
        android:minLines="2"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="104dp"
        tools:layout_editor_absoluteY="99dp" />


    <Button
        android:id="@+id/btnPlay"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="407dp"
        android:layout_height="81dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:text="Play Game"
        android:textSize="24sp"
        android:layout_margin="0dp"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
